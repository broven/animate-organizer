{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docker:build": "npm run build && docker build -t animate-organizer:latest .",
    "serve": "node dist/index.js"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "animate-organizer",
  "author": "metajs",
  "module": "dist/animate-organizer.esm.js",
  "size-limit": [
    {
      "path": "dist/animate-organizer.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/animate-organizer.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@types/node-cron": "^3.0.0",
    "husky": "^7.0.4",
    "size-limit": "^7.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "animate-metainfo-parser-cn": "^1.0.2",
    "chalk": "^4.1.2",
    "node-cron": "^3.0.0"
  }
}
